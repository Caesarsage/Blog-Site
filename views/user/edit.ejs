<% layout('layout/boilerplate') %>
<div class="row">

  <div class="col-6 offset-3">
    <h1 class="text-center">Public Profile</h1>
    <p class="text-center">Add Information about yourself</p>
    <form action="/user/profile/<%=user._id%>?_method=PUT" method="POST">
      <div class="mb-3">
          <figure>
            <img class="rounded circle" src="/images/slide1.jpg" alt="">
          </figure>
        </div>
        <fieldset>
        <div class="mb-3 form-file custom-file">
          <input type="file" class="form-file-input" id="image" name="image" multiple>
          <label class="form-file-label" for="image">
            <span class="form-file-text custom-file-label">Choose image(s)...</span>
            <span class="form-file-button">Browse</span>
          </label>
        </div>
        <legend>Basics: </legend>
        
        <div class="mb-3">
          <label class="form-label" for="firstName">First Name:</label>
          <input type="text" class="form-control" id="firstName" name="FirstName" value="<%= user.FirstName %> ">
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label for="lastName" class="form-label">Last Name:</label>
          <input type="text" class="form-control" id="lastName" name="LastName" value="<%= user.LastName %> ">
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="headline">Headline:</label>
          <div>
            <i>Give a professional headline</i>
          </div>
          <input type="text" class="form-control" id="headline" name="Headline" value="<%= user.Headline %>"
            maxlength="50">
          <div class="valid-feedback">
            Look good!
          </div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description:</label>
          <div>
            <i>Let's the public know more about you</i>
          </div>
          <textarea class="form-control" id="content" cols="5" rows="3" name="description">
            <%= user.description %> 
          </textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>


        
      </fieldset>
      <legend>Links:</legend>
      <fieldset>
        <label class="form-label" for="website">Website:</label>
        <input type="url" class="form-control" id="website" name="website" value="<%= user.website %> ">
        <div class="mb-3">
          <i>input your website full url e.g https://wwww.google.com</i>
        </div>
        <label class="form-label" for="twitter">Twitter:</label>
        <input type="url" class="form-control" name="twitter" value="<%= user.twitter %> ">
        <div class="mb-3">
          <i>input your twitter full url address e.g https://wwww.twitter.com/caesar_sage</i>
        </div>
        <label class="form-label" for="facebook">Facebook:</label>
        <input type="url" class="form-control" name="facebook" value="<%= user.facebook %> ">
        <div class="mb-3">
          <i>input your facebook full url e.g https://wwww.facebook.com/destinyerhabor</i>
        </div>
        <label class="form-label" for="linkedIn">LinkedIn:</label>
        <input type="url" class="form-control" name="linkedIn" value="<%= user.linkedIn %> ">
        <div class="mb-3">
          <i>input your linkedIn full url e.g https://wwww.linkedIn.com/in/destiny-erhabor</i>
        </div>
      </fieldset>
      <button class="btn btn-success btn-lg">submit</button>
  </div>

  </form>