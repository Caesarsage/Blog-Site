<% layout('layout/boilerplate') %>
<link rel="stylesheet" href="/css/styles.css">
<div class="row bg-light bg-gradient">
  <div class="mt-3 text-md-center">
    <a href="/user/profile/<%= user._id %>/edit" class="btn btn-sm btn-outline-primary mb-2">Edit Public Profile</a>
    <figure>
      <img class="rounded circle" src="<%= user.avatar %> " alt="">
    </figure>
    <figcaption>
        <h4> <%= user.Headline.toUpperCase() %></h4>
    </figcaption>
  </div>
   <div class="text-center">
  <% if (user.description) { %>
    <%= user.description %> 
  <% } %>
  </div>
</div>
<div class="row"> 
  <h4 class="text-center">Build Connections</h4>
  <ul class="list-group list-group-horizontal text-center d-flex flex-row justify-content-center">
    <% if (user.website ) { %>
      <li data-toggle="tooltip" data-placement="bottom" title="Website" class="list-group-item"><a href="<%= user.website %> "> <i class="fa fa-lg fa-desktop"> </i></a></li>
    <% } %>
    <% if (user.twitter ) { %>
      <li data-toggle="tooltip" data-placement="bottom" title="Twitter handler" class="list-group-item"><a href="<%= user.twitter %> "> <i class="fa fa-lg fa-twitter"></i> </a></li>
    <% } %>
    <% if (user.linkedIn ) { %>
      <li data-toggle="tooltip" data-placement="bottom" title="LinkedIn handler" class="list-group-item"><a href="<%= user.linkedIn %> "> <i class="fa fa-lg fa-linkedin"> </i></a></li>
    <% } %>
    <% if (user.facebook ) { %>
      <li data-toggle="tooltip" data-placement="bottom" title="Facebook handler" class="list-group-item"><a href="<%= user.facebook %> "> <i class="fa fa-lg fa-facebook"> </i></a></li>
    <% } %>
  </ul>
</div>
<hr>
<div class="row bg-secondary bg-gradient">
  <h4 class=" text-center">Blog(s) Created By <%=user.username%></h4>
  <% blogs.forEach(blog => { %>
  <div class="col-md-3 mb-3">
    <div class="card bg-light bg-gradient">
      <img src="<%= blog.image %>" class="img-fluid" alt="">
      <div class="card-body">
        <h2 class="card-title"><%= blog.title %> </h2>
        <p class="card-text"> <%= blog.content.slice(0, 150) %> </p>
        <a href="/blogs/<%=blog._id %>" class="btn btn-sm btn-primary">View </a>
      </div>
    </div>
  </div>
  <% }) %>

</div>