<% layout('layout/boilerplate') %>

<!-- Body Content -->

<div class="row">
  <ol class="col-12 breadcrumb ">
    <li class="breadcrumb-item "><a class="text-decoration-none" href="">Contact</a> </li>
    <li class="breadcrumb-item text-info"> PAGE N0: <%= page %> </li>  
  </ol>
  <hr>
</div>
<section class="home-content mt-4 mb-3">
  <!-- <div class="container"> -->
  <!-- <div class="row"> -->
  <div class="card">
    <% for(let blog of blogs) {%>
    <div class="my-card pt-5">
      <div class="card-header">
        <blockquote class="">PUBLISHED BY:
          <a class="btn btn-sm btn-outline-info" href="/user/profile/<%=blog.author._id%>"> <%= blog.author.FirstName.toUpperCase() %> <%= blog.author.LastName.toUpperCase() %> </a> 
        </blockquote>
        <h3 class="card-title"> <%= blog.title %> </h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-11 text-center">
            <h5><%= blog.capture %> </h5>
            <p class="card-text text-muted"> <%= blog.content.slice(0, 150) %>...</p>
            <a href="/blogs/<%=blog._id %>" class="btn btn-sm btn-primary"> Read More</a>
            <br>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <i> PUBLISHED :</i><small><%= blog.createdAt %> </small>
      </div>

    </div>
    <% } %> </div>
  <!-- </div> -->
  <!-- </div> -->
</section>

<section>
  <div class="container text-center">
    <nav aria-label="page pagination">
      <ul class="pagination">
        <% if(+page !== 1) {%> 
          <li class="page-item"><a class="page-link" href="/blogs?page=<%= 1%>">First Page</a></li>
        <% } %> 
        <% if(+page >= 2){%>
        <li class="page-item">
          <a class="page-link" href="/blogs?page=<%= +page - 1%>" tabindex="-1" aria-disabled="true">Previous</a>
        </li>
        <%}%>
    
        <% if (limit) {%> 
        <li class="page-item">
          <a class="page-link" href="/blogs?page=<%= +page + 1 %> ">Next</a>
        </li>
        <% }%> 
      </ul>
    </nav>
  </div>