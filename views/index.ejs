<!--Subscribe Modal -->
<div class="modal fade" id="subscribe_modal" tabindex="-1" aria-labelledby="subscribeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-muted">
          Subscribe for Newsletters
        </h5>
        <button class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" name="" class="form-control" id="email" placeholder="your email address">
          </div>
          <div class="mb-3">
            <button class="btn btn-sm btn-success">Subscribe</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Body Content -->
<section class="home-content mt-4 ">
  <div class="container">
    <div class="row">
      <% for(let blog of blogs) {%> 
        <div class="col-md-3 mb-3">  
          <div class="card my-card">
            <div class="card-body">
              <img src="<%= blog.image %>" alt="<%= blog.title %>" class="img-thumbnails">
              <h3 class="card-title"> <%= blog.title %> </h3>
              <p class="card-text text-muted">  <%= blog.content.slice(0, 50) %>...</p>
              <a href="/blogs/<%=blog._id %>" class="btn btn-sm btn-primary"> Read More</a>
              <small><%= blog.createdAt %> </small>
            </div>
          </div>
        </div>  
      <% } %> 
    </div>
  </div>
</section>