<% layout('layout/boilerplate') %> 
<link rel="stylesheet" href="/css/styles.css">

<!-- Body Content -->
<section class="mt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
         <% for(let blog of blogs) {%> 
          <div class="list-group my-list mb-4">
            <div class="list-group-item">
              <div class="row">
                <div class="col-md-3">
                  <img src="<%= blog.image %>" alt="<%= blog.title %>" class="img-fluid rounded">
                </div>
                <div class="col-md-9">
                  <h3><%= blog.title %> </h3>
                  <p class="text-muted"> <%= blog.content.slice(0, 150) %>...</p>
                  <a href="/blogs/<%=blog._id %>" class="btn btn-sm btn-primary"> Read More</a>
                </div>
              </div>
            </div>
          </div>   
        <% } %> 
      </div>
      <!-- SIDEBAR -->
      <div class="col-md-4">
        <aside class="card text-white bg-primary mb-3">
          <div class="card-body">
            <h4 class="card-title">Subscribe for Newsletters</h4>
            <p class="card-text">Get latest updates and freebies</p>
            <form action="" method="POST">
              <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" name="" class="form-control" id="email" placeholder="your email address">
              </div>
              <div class="mb-3">
                <button class="btn btn-sm btn-block btn-warning">Subscribe</button>
              </div> 
            </form>
          </div>
        </aside>

        <ul class="list-group mb-3">
          <li class="list-group-item active">Archives</li>
          <li class="list-group-item"><a href="#">2018</a></li>
          <li class="list-group-item"><a href="#">2019</a></li>
          <li class="list-group-item"><a href="#">2020</a></li>
        </ul>

        <ul class="list-group mb-3">
          <li class="list-group-item active">Recent Posts</li>
          
          <li class="list-group-item"><a href="/blogs/<%=blogs[blogs.length-1]._id%> "><%=blogs[blogs.length-1].title  %> </a></li>
          <li class="list-group-item"><a href="/blogs/<%=blogs[blogs.length-2]._id%> "><%= blogs[blogs.length-2].title %> </a></li>
          <li class="list-group-item"><a href="/blogs/<%=blogs[blogs.length-3]._id%> "><%= blogs[blogs.length-3].title %> </a></li>
        </ul>
      </div>
    </div>
  </div>
</section>